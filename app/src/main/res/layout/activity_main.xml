<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fgdgd"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Result"
            style="@style/TextAppearance.AppCompat.Display4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="sans-serif-black"
            android:text="NASA"
            android:textColor="#91F3FF" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView"
        style="@style/TextAppearance.AppCompat.Display1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="sans-serif-condensed-light"
        android:text="PICTURE OF THE DAY!"
        android:textAlignment="center"
        android:textColor="#DACAFF" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/selectDate"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-light"
            android:hint="Click me to select     date"
            android:textAlignment="center"
            android:textColorHint="#DACAFF" />

        <ImageButton

            android:id="@+id/showPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:adjustViewBounds="true"
            android:background="#00FF"
            android:scaleType="fitXY"
            android:paddingRight="15dp"
            android:src="@drawable/check_1_icon">

        </ImageButton>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView2"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Search the NASA Library!"
            android:textAlignment="center"
            android:textColor="#DACAFF" />

        <ImageButton
            android:id="@id/Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_icon"
            android:scaleType="fitXY"
            android:layout_weight="20"
            android:layout_gravity="center"
            android:paddingRight="15dp"
            android:background="#00FF"
            android:adjustViewBounds="true"
            >

        </ImageButton>

    </LinearLayout>





</LinearLayout>


